
<h2><%= @cocktail.name %></h2>

<p>This drink includes the following doses:</p>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> | <%= dose.ingredient.name %>   
    </li>
  <% end %>
</ul>

<p><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to overview", cocktails_path %></p>